<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/login"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView4_24_7"
        android:layout_width="297dp"
        android:layout_height="42dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/yellow"
        android:src="@drawable/dash_boad"
        app:layout_constraintBottom_toTopOf="@+id/send_otp_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="VectorDrawableCompat" />

    <EditText
        android:id="@+id/number"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#EBEBEB"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#222020"
        android:textColorHint="#222020"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4_24_7"
        app:layout_constraintEnd_toEndOf="@+id/imageView4_24_7"
        app:layout_constraintStart_toStartOf="@+id/imageView4_24_7"
        app:layout_constraintTop_toTopOf="@+id/imageView4_24_7" />


    <TextView
        android:id="@+id/number_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="                Number"
        android:textColor="#424242"
        android:textColorHint="#424242"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4_24_7"
        app:layout_constraintEnd_toEndOf="@+id/imageView4_24_7"
        app:layout_constraintStart_toStartOf="@+id/imageView4_24_7"
        app:layout_constraintTop_toTopOf="@+id/imageView4_24_7" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="297dp"
        android:layout_height="42dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/dash_boad"
        app:layout_constraintBottom_toTopOf="@+id/verify_otp_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="VectorDrawableCompat" />

    <EditText
        android:id="@+id/otp"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#EBEBEB"
        android:ems="10"
        android:inputType="number"
        android:textColor="#222020"
        android:textColorHint="#222020"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintEnd_toEndOf="@+id/imageView8"
        app:layout_constraintStart_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/imageView8" />

    <TextView
        android:id="@+id/otp_view"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter otp"
        android:inputType="number"
        android:textColor="#222020"
        android:textColorHint="#222020"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintEnd_toEndOf="@+id/imageView8"
        app:layout_constraintStart_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/imageView8" />


    <ImageView
        android:id="@+id/send_otp_image"
        android:layout_width="297dp"
        android:layout_height="45dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/request_otp"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/verify_otp_image"
        android:layout_width="297dp"
        android:layout_height="45dp"
        android:layout_marginBottom="65dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/signin"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/send_otp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="@+id/send_otp_image"
        app:layout_constraintEnd_toEndOf="@+id/send_otp_image"
        app:layout_constraintStart_toStartOf="@+id/send_otp_image"
        app:layout_constraintTop_toTopOf="@+id/send_otp_image" />

    <TextView
        android:id="@+id/verify_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="23sp"

        app:layout_constraintBottom_toBottomOf="@+id/verify_otp_image"
        app:layout_constraintEnd_toEndOf="@+id/verify_otp_image"
        app:layout_constraintStart_toStartOf="@+id/verify_otp_image"
        app:layout_constraintTop_toTopOf="@+id/verify_otp_image" />

    <ProgressBar
        android:id="@+id/send_otp_progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/send_otp_text"
        app:layout_constraintEnd_toEndOf="@+id/send_otp_image"
        app:layout_constraintStart_toStartOf="@+id/send_otp_image"
        app:layout_constraintTop_toTopOf="@+id/send_otp_image" />

    <ProgressBar
        android:id="@+id/verify_progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/verify_otp_image"
        app:layout_constraintEnd_toEndOf="@+id/verify_otp_image"
        app:layout_constraintStart_toStartOf="@+id/verify_otp_image"
        app:layout_constraintTop_toTopOf="@+id/verify_otp_image" />


</androidx.constraintlayout.widget.ConstraintLayout>